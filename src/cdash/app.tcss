/* Claude Dashboard - k9s-style Unified Layout
   Warm Terminal aesthetic with sessions as focal point */

/* ============================================
   BASE / APP
   ============================================ */

Screen {
    background: $background;
}

/* Content container holds swappable view panels */
#content {
    height: 1fr;
}

/* All view panels fill the content area */
#view-overview,
#view-plugins,
#view-mcp,
#view-github {
    height: 1fr;
}

/* ============================================
   HEADER PANEL (k9s-style stats row)
   ============================================ */

/* HeaderPanel styles are in DEFAULT_CSS in header.py */

/* ============================================
   SESSIONS PANEL (Main content)
   ============================================ */

/* SessionsPanel styles are in DEFAULT_CSS in sessions.py */

/* DataTable styling */
DataTable {
    scrollbar-background: $surface;
    scrollbar-color: #404040;
    scrollbar-color-hover: #505050;
    scrollbar-color-active: #606060;
}

DataTable > .datatable--header {
    background: $surface;
    color: $text-muted;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $primary-darken-2;
    color: $text;
}

DataTable > .datatable--even-row {
    background: $panel;
}

DataTable > .datatable--odd-row {
    background: $surface;
}

DataTable:focus > .datatable--cursor {
    background: $primary;
}

/* ============================================
   FOOTER
   ============================================ */

Footer {
    background: $surface;
    color: $text-muted;
}

FooterKey > .footer-key--key {
    background: $primary-darken-2;
    color: $text;
}

FooterKey > .footer-key--description {
    color: $text-muted;
}

/* ============================================
   LIVENESS INDICATORS (Refresh dots)
   ============================================ */

/* RefreshIndicator styles are in DEFAULT_CSS in indicators.py */

/* ============================================
   SCROLLBARS
   ============================================ */

Scrollbar {
    background: $surface;
}

Scrollbar > .scrollbar--bar {
    color: #404040;
}

Scrollbar > .scrollbar--bar-hover {
    color: #505050;
}

Scrollbar > .scrollbar--bar-active {
    color: #606060;
}
